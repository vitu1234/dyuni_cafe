<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dyunicafe">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DyuniCafe"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.SearchActivity"></activity>
        <activity android:name=".activities.common.SignUpActivity" />
        <activity android:name=".activities.common.LoginActivity" />
        <activity android:name=".activities.AccountDirectActivity" />
        <activity android:name=".activities.common.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.common.UserTypeSelectActivity" />
        <activity android:name=".activities.common.OnBoardingActivity" />
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.AllCategory" />
        <activity android:name=".activities.ProductDetails" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>